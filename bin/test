#!/bin/sh

set -o pipefail

xcodebuild \
  -destination 'platform=tvOS Simulator,OS=9.1,name=Apple TV 1080p' \
  -scheme Prelude-tvOS \
  clean build test \
  | tee $CIRCLE_ARTIFACTS/xcode_raw.log \
  | xcpretty

xcodebuild \
  -destination 'platform=iOS Simulator,OS=9.2,name=iPhone 6' \
  -scheme Prelude-iOS \
  clean build test \
  | tee $CIRCLE_ARTIFACTS/xcode_raw.log \
  | xcpretty
